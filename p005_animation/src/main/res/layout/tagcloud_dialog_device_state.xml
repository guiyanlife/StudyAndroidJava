<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x200"
    android:layout_height="@dimen/y299"
    android:background="@drawable/tagcloud_dialog_bg"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_tagcloud_dialog_device_close"
            android:layout_width="@dimen/x19"
            android:layout_height="@dimen/y21"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/x18"
            android:layout_marginTop="@dimen/y20"
            android:src="@drawable/tagcloud_dialog_close" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tagcloud_dialog_device_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y27"
                android:layout_gravity="center_horizontal"
                android:text="@string/tagcloud_pbj"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_11" />
            <ImageView
                android:layout_width="@dimen/x96"
                android:layout_height="@dimen/y148"
                android:layout_marginTop="@dimen/y30"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/tagcloud_dialog_haier_robot" />
            <TextView
                android:id="@+id/iv_tagcloud_dialog_device_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y18"
                android:layout_gravity="center_horizontal"
                android:text="@string/tagcloud_zzwc"
                android:textColor="#1d82e8"
                android:textSize="@dimen/text_size_8" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
