<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_top"
            android:orientation="vertical"
            android:showDividers="middle"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y53"
                android:background="#EDEBE9">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/x28"
                    android:paddingRight="@dimen/x28"
                    android:text="Spinner"
                    android:textColor="#888580"
                    android:textSize="@dimen/text_size_12" />
            </RelativeLayout>

            <LinearLayout style="@style/layout_first">
                <TextView
                    android:id="@+id/tv_import_pic_min"
                    style="@style/default_font_first"
                    android:text="@string/import_pic_min"/>
                <Spinner
                    android:id="@+id/Sp_import_pic_min"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y106"
                    android:dropDownHorizontalOffset="50dp"
                    android:dropDownVerticalOffset="50dp"
                    android:layout_marginRight="@dimen/x28"
                    android:gravity="right"
                    android:background="@null"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/x28"
                android:layout_marginRight="@dimen/x28"
                android:background="#DCDCDC" />

            <TextView
                android:id="@+id/tv_Spinner2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y106"
                android:background="@drawable/on_touch_bg"
                android:clickable="true"
                android:drawablePadding="@dimen/x20"
                android:drawableRight="@drawable/icon_arrow"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x28"
                android:paddingRight="@dimen/x28"
                android:text="Spinner 2"
                android:textColor="@color/ff383837"
                android:textSize="@dimen/text_size_16" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>