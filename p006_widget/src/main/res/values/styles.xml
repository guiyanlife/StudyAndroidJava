<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Reboot password dialog theme. -->
    <style name="dialog_layout_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
    </style>
    <style name="dialog_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/color_head_right</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="dialog_line_h">
        <item name="android:layout_width">0.6dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line</item>
    </style>
    <style name="dialog_line_w">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.6dp</item>
        <item name="android:background">@color/line</item>
    </style>
    <style name="dialog_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20.3sp</item>
        <item name="android:textColor">@color/color_title</item>
    </style>
    <style name="dialog_layout_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/shape</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="dialog_layout_parent">
        <item name="android:layout_width">306dp</item>
        <item name="android:layout_height">210dp</item>
        <item name="android:background">@drawable/shape</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="alertdialog" parent="base_alertdialog">
        <item name="android:backgroundDimAmount">0.5</item>
    </style>
    <style name="base_alertdialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <!-- Container spinner -->
    <style name="first_size"> <!--一号字体-->
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>
    <style name="second_size"> <!--二号字体-->
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>
    <style name="layout_first">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="default_font_first"> <!--各类设置LinearLayout一级标题-->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/color_title</item>
        <item name="android:layout_marginLeft">@dimen/x28</item>
    </style>
</resources>
