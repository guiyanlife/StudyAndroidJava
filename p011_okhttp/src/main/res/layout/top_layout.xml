<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fl_title_bar_height"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/iv_app_icon"
            android:layout_width="@dimen/iv_title_bar_app_icon_size"
            android:layout_height="@dimen/iv_title_bar_app_icon_size"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/iv_title_bar_app_icon_margin_start"
            android:scaleType="fitXY"
            android:src="@drawable/icon" />

        <TextView
            android:id="@+id/tv_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/iv_title_bar_title_margin_start"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_title_bar_title_size"
            android:textStyle="bold"
            android:layout_toEndOf="@id/iv_app_icon"/>

        <ImageView
            android:id="@+id/iv_exit"
            android:layout_width="@dimen/iv_title_bar_exit_size"
            android:layout_height="@dimen/iv_title_bar_exit_size"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/iv_title_bar_exit_margin_end"
            android:scaleType="fitXY"
            android:src="@drawable/exit" />
    </RelativeLayout>
</FrameLayout>