<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fl_title_bar_height"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/iv_toolbar_back"
            android:layout_width="@dimen/iv_title_bar_app_icon_size"
            android:layout_height="@dimen/iv_title_bar_app_icon_size"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/iv_title_bar_app_icon_margin_start"
            android:scaleType="fitXY"
            android:src="@drawable/ic_toolbar_back" />

        <TextView
            android:id="@+id/tv_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_title_bar_title_size"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/iv_toolbar_close"
            android:layout_width="@dimen/iv_title_bar_exit_size"
            android:layout_height="@dimen/iv_title_bar_exit_size"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/iv_title_bar_exit_margin_end"
            android:scaleType="fitXY"
            android:src="@drawable/exit"
            android:visibility="invisible"/>
    </RelativeLayout>
</FrameLayout>